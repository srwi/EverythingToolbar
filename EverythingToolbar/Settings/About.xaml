<Page x:Class="EverythingToolbar.Settings.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:behaviors="clr-namespace:EverythingToolbar.Behaviors"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      ScrollViewer.CanContentScroll="False">
    
    <b:Interaction.Behaviors>
        <behaviors:WpfUiBehavior />
    </b:Interaction.Behaviors>

    <ScrollViewer>
        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Height="200"
                CornerRadius="8">
                <Border.Background>
                    <ImageBrush
                        ImageSource="pack://application:,,,/EverythingToolbar;component/Images/AboutBannerBackground.png"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Stretch="UniformToFill" />
                </Border.Background>
                <Border CornerRadius="8">
                    <Border.Background>
                        <RadialGradientBrush>
                            <GradientStop Offset="0" Color="#1F000000" />
                            <GradientStop Offset="1" Color="#4F000000" />
                        </RadialGradientBrush>
                    </Border.Background>
                    <Grid>
                        <StackPanel
                            Margin="48,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Background="Transparent">
                            <ui:TextBlock
                                FontTypography="Title"
                                Foreground="#FFFFFF"
                                Margin="0,0,0,1"
                                Text="EverythingToolbar" />
                            <ui:TextBlock
                                FontTypography="Subtitle"
                                Foreground="#B7FFFFFF"
                                Margin="0,0,0,5"
                                Text="Everything integration for the Windows taskbar." />
                            <ui:TextBlock
                                Name="VersionTextBlock"
                                FontTypography="BodyStrong"
                                Foreground="#99FFFFFF"
                                Text="Version X.X.X.X" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Border>

            <Grid Grid.Row="1" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <ui:CardAction
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,0,4,0"
                    Padding="0"
                    VerticalAlignment="Stretch"
                    IsChevronVisible="False">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image
                            Width="60"
                            Margin="24,0,0,0"
                            Source="pack://application:,,,/EverythingToolbar;component/Images/WinUIGallery/IconElement.png" />

                        <ui:TextBlock
                            Grid.Column="1"
                            Margin="24"
                            VerticalAlignment="Center"
                            FontTypography="BodyStrong"
                            Text="General Settings"
                            TextWrapping="WrapWithOverflow" />
                    </Grid>
                </ui:CardAction>

                <ui:CardAction
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="4,0,4,0"
                    Padding="0"
                    VerticalAlignment="Stretch"
                    IsChevronVisible="False">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image
                            Width="60"
                            Margin="24,0,0,0"
                            Source="pack://application:,,,/EverythingToolbar;component/Images/WinUIGallery/Shape.png" />

                        <ui:TextBlock
                            Grid.Column="1"
                            Margin="24"
                            VerticalAlignment="Center"
                            FontTypography="BodyStrong"
                            Text="Custom Actions"
                            TextWrapping="WrapWithOverflow" />
                    </Grid>
                </ui:CardAction>

                <ui:CardAction
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="4,0,4,0"
                    Padding="0"
                    VerticalAlignment="Stretch"
                    IsChevronVisible="False">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Image
                            Width="60"
                            Margin="24,0,0,0"
                            Source="pack://application:,,,/EverythingToolbar;component/Images/WinUIGallery/InfoBadge.png" />

                        <ui:TextBlock
                            Grid.Column="1"
                            Margin="24"
                            VerticalAlignment="Center"
                            FontTypography="BodyStrong"
                            Text="Keyboard Shortcuts"
                            TextWrapping="WrapWithOverflow" />
                    </Grid>
                </ui:CardAction>
            </Grid>

            <StackPanel Grid.Row="2" Margin="0,24,0,0">
                <ui:TextBlock
                    FontSize="18"
                    FontWeight="DemiBold"
                    Text="Links" />
                <ui:HyperlinkButton
                    Margin="8,8,0,0"
                    Padding="4"
                    Content="Frequently Asked Questions"
                    NavigateUri="https://github.com/srwi/EverythingToolbar/wiki/FAQ"
                    ToolTip="https://github.com/srwi/EverythingToolbar/wiki/FAQ" />
                <ui:HyperlinkButton
                    Margin="8,0,0,0"
                    Padding="4"
                    Content="Source Code (GitHub)"
                    NavigateUri="https://github.com/srwi/EverythingToolbar"
                    ToolTip="https://github.com/srwi/EverythingToolbar" />
                <ui:HyperlinkButton
                    Margin="8,0,0,0"
                    Padding="4"
                    Content="Star on GitHub"
                    NavigateUri="https://github.com/srwi/EverythingToolbar"
                    ToolTip="https://github.com/srwi/EverythingToolbar" />
                <ui:HyperlinkButton
                    Margin="8,0,0,0"
                    Padding="4"
                    Content="Make a donation"
                    NavigateUri="https://paypal.me/rumswinkel"
                    ToolTip="https://paypal.me/rumswinkel" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
