<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Sys="clr-namespace:System;assembly=mscorlib">

    <Sys:Double x:Key="ScrollbarWidth">12</Sys:Double>
    <Sys:Double x:Key="ScrollbarThumbWidth">12</Sys:Double>
    <Sys:Double x:Key="ScrollbarThumbHeight">15</Sys:Double>
    <Thickness x:Key="ScrollbarThumbPadding"
               Left="3"
               Right="3" />
    <CornerRadius x:Key="ScrollbarThumbCornerRadius"
                  BottomLeft="3"
                  BottomRight="3"
                  TopLeft="3"
                  TopRight="3" />
    <CornerRadius x:Key="ScrollbarCornerRadius"
                  BottomLeft="6"
                  BottomRight="6"
                  TopLeft="6"
                  TopRight="6" />
    <Sys:String x:Key="ScrollbarArrowUpCornerRadius">6, 6, 0, 0</Sys:String>
    <Sys:String x:Key="ScrollbarArrowUpContent">M 0 6 L 8 6 L 8 4 L 5 0 L 3 0 L 0 4 Z</Sys:String>
    <Sys:String x:Key="ScrollbarArrowDownCornerRadius">0, 0, 6, 6</Sys:String>
    <Sys:String x:Key="ScrollbarArrowDownContent">M 0 0 L 8 0 L 8 2 L 5 6 L 3 6 L 0 2 Z</Sys:String>

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../../../Styles/Scrollbar.xaml" />
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>